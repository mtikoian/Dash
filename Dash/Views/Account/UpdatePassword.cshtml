@using Dash.Models
@using Dash.Resources
@model User

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Account.UpdatePassword" controller="Account" action="UpdatePassword"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />
    <partial name="_AccountTabs" model="new AccountView(AccountViewTab.Password)" />

    <horizontal-form controller="Account" action="UpdatePassword">
        <form-group-input for="Password" autofocus="true" help-text="@Model.HelpText" />
        <form-group-input for="ConfirmPassword" />

        <form-buttons />
    </horizontal-form>
</body-content>
