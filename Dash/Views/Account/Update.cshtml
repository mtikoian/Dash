@using Dash.I18n
@using Dash.Models
@model User

@using (Html.BeginBodyContent(Account.UpdateAccount))
{
    @Html.Breadcrumbs(new List<Breadcrumb> {
        new Breadcrumb(Core.Dashboard, "Index", "Dashboard", hasAccess: User.IsInRole("dashboard.index")),
        new Breadcrumb(Account.UpdateAccount, "Update", "Account", hasAccess: User.IsInRole("account.update"))
    });

    @using (Html.BeginCustomForm("Update", "Account", null, Account.UpdateAccount))
    {
        @Html.HiddenFor(model => model.Id)

        <div class="columns">
            <div class="col-6">
                @Html.LabelInputFor(model => model.FirstName)
                @Html.LabelInputFor(model => model.LastName)
                @Html.LabelPasswordFor(model => model.Password)
                @Html.LabelPasswordFor(model => model.ConfirmPassword)
                @Html.LabelInputFor(model => model.Email, inputType: Dash.Html.InputFieldType.Email)
                @Html.LabelDropDownListFor(model => model.LanguageId, new SelectList(Model.DbContext.GetAll<Language>(), "Id", "Name"))
            </div>
        </div>

        @Html.FormButtons()
    }
}

