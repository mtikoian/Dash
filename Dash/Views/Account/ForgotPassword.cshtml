@using Dash.I18n;
@model Dash.Models.ForgotPassword

<div class="container">
    <div class="columns">
        <div class="col-11 col-ml-auto pt-2">
            @using (Html.BeginCustomForm("ForgotPassword", "Account", ajaxForm: false))
            {
                <div class="col-12 pb-2">
                    <h4>@Account.ForgotPassword</h4>
                </div>

                @Html.Partial("_Error")

                @Html.ToCard(Account.ForgotPasswordText)

                <div class="col-12 pt-2">
                    <div class="col-6">
                        @Html.LabelInputFor(model => model.UserName)
                    </div>
                </div>

                <div class="col-12 pt-2">
                    <div class="col-6">
                        <div class="columns">
                            <span class="form-buttons col-8 col-ml-auto">
                                <input type="submit" value="@Core.Okay" class="btn btn-primary" />
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
