@using Dash.Resources;
@model Dash.Models.ForgotPassword

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Account.ForgotPassword" controller="Account" action="ForgotPassword" is-active="true" />
    </breadcrumb>

    <partial name="_Toast" />
    <toast id="forgotPasswordToast" type="Info" message="@Account.ForgotPasswordText" />

    <horizontal-form controller="Account" action="ForgotPassword">
        <form-group-input for="UserName" autofocus="true" />
        <form-buttons submit-label="@Core.Okay" />
    </horizontal-form>
</body-content>

