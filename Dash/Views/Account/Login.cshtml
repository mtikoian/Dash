@using Dash.Resources
@model Dash.Models.LogOn

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Account.Login" controller="Account" action="Login" is-active="true" />
    </breadcrumb>

    <partial name="_Toast" />

    <horizontal-form controller="Account" action="Login" is-pjax="false">
        <input asp-for="ReturnUrl" type="hidden" />
        <form-group-input for="UserName" autofocus="true" />
        <form-group-input for="Password" />
        <form-buttons submit-label="@Account.Login">
            <authorized-button controller="Account" action="ForgotPassword" title="@Account.ForgotPassword" class="BtnWarning" has-access="true" />
        </form-buttons>
    </horizontal-form>
</body-content>
