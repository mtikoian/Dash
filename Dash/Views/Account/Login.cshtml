@using Dash.I18n
@model Dash.Models.LogOn

<div class="container">
    <div class="columns">
        <div class="col-11 col-ml-auto pt-2">
            @using (Html.BeginCustomForm("Login", "Account", ajaxForm: false))
            {
                <div class="col-12 pb-2">
                    <h4>@Account.Login</h4>
                </div>

                @if (!((string)ViewBag.Error).IsEmpty())
                {
                    @Html.ToCard((string)ViewBag.Error, BootstrapTypes.Warning)
                }
                @if (!((string)TempData["Error"]).IsEmpty())
                {
                    @Html.ToCard((string)TempData["Error"], BootstrapTypes.Warning)
                }

                <div class="col-12 pt-2">
                    <div class="col-6">
                        @Html.LabelInputFor(m => m.UserName)
                        @Html.LabelPasswordFor(m => m.Password, new { })
                    </div>
                </div>

                <div class="col-12 pt-2">
                    <div class="col-6">
                        <div class="columns">
                            <span class="form-buttons col-8 col-ml-auto">
                                <input type="submit" value="@Account.Login" class="btn btn-primary" />
                                @Html.ActionLink(Account.ForgotPassword, "ForgotPassword", "Account", null, new { @class = "btn btn-warning dash-ajax" })
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
