@using Dash.Resources;
@model Dash.Models.ResetPassword

<div class="container">
    <div class="columns">
        <div class="col-11 col-ml-auto pt-2">
            @using (Html.BeginCustomForm("ResetPassword", "Account", ajaxForm: false))
            {
                <div class="col-12 pb-2">
                    <h4>@Account.ResetPassword</h4>
                </div>

                <partial name="_Toast" />

                @Html.ToCard(Account.ResetPasswordText)

                <div class="col-12 pt-2">
                    <div class="col-6">
                        @Html.HiddenFor(model => model.Email)
                        @Html.HiddenFor(model => model.Hash)
                        @Html.Hidden("IsReset", true)
                        @Html.LabelInputFor(model => model.Password, new { required = true }, inputType: Dash.Html.InputFieldType.Password)
                        @Html.LabelInputFor(model => model.ConfirmPassword, new { required = true }, inputType: Dash.Html.InputFieldType.Password)
                    </div>
                </div>

                <div class="col-12 pt-2">
                    <div class="col-6">
                        <div class="columns">
                            <span class="form-buttons col-8 col-ml-auto">
                                <input type="submit" value="@Html.Raw(Account.ResetPassword)" class="btn btn-primary" />
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
