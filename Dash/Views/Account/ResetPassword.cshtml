@using Dash.Resources;
@model Dash.Models.ResetPassword

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Account.ResetPassword" controller="Account" action="ResetPassword" is-active="true" />
    </breadcrumb>

    <partial name="_Toast" />
    <toast id="resetPassword" message="@Model.HelpText" type="Info" allow-close="false" />

    <horizontal-form controller="Account" action="ResetPassword">
        <input asp-for="Email" type="hidden" />
        <input asp-for="Hash" type="hidden" />
        <input name="IsReset" id="IsReset" type="hidden" value="true" />

        <form-group-input for="Password" autofocus="true" is-required="true" />
        <form-group-input for="ConfirmPassword" is-required="true" />
        <form-buttons submit-label="@Account.ResetPassword" />
    </horizontal-form>
</body-content>
