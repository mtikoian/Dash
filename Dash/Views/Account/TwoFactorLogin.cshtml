@using Dash.Resources
@model Dash.Models.UserMembership

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Account.TwoFactor" controller="Account" action="TwoFactorLogin" is-active="true" />
    </breadcrumb>

    <partial name="_Toast" />

    <horizontal-form controller="Account" action="TwoFactorLogin" is-pjax="false">
        <input asp-for="UserName" type="hidden" />
        <input asp-for="LoginHash" type="hidden" />

        <form-group-input for="AuthCode" autofocus="true" is-required="true" />

        <form-buttons submit-label="@Account.Login">
            <authorized-button controller="Account" action="Login" class="BtnWarning" title="@Core.Cancel" has-access="true" force-reload="true" />
            <authorized-button controller="Account" action="TwoFactorHelp" class="BtnInfo" route-values="@(new { Username = Model.UserName })" title="@Account.Help" has-access="true" />
        </form-buttons>
    </horizontal-form>
</body-content>
