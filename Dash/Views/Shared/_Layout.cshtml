@using System.Globalization;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@Dash.I18n.Core.Dashboard</title>
    <link rel="stylesheet" href="~/css/bundle.css" />
    <link rel="icon" href="~/favicon.ico">
</head>
<body data-base-url="@Url.Content("~")" data-resx="@Url.Action("Index", "Resx", null)" data-lang="@(CultureInfo.DefaultThreadCurrentCulture?.TwoLetterISOLanguageName ?? "en")">
    @{ Html.RenderPartial("_NavBar"); }

    <div class="content-wrapper">
        @RenderBody()

        <div id="loader" class="dialog-loading">
            <div class="loading loading-lg"></div>
        </div>

        <script type="text/javascript" src="~/js/bundle.js"></script>
        <script type="text/javascript" src="~/js/modules.js"></script>
    </div>
</body>
</html>
