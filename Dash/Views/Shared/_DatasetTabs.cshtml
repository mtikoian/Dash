@using Dash.Resources
@using Dash.Models
@model DatasetView

<tab-list>
    <tab-item no-render="@(!User.IsInRole("dataset.edit"))">
        @if (Model.ActiveTab == DatasetViewTab.Overview)
        {
            <tab-active id="overview">@Datasets.Overview</tab-active>
        }
        else
        {
            <authorized-button controller="Dataset" action="Edit" title="@Datasets.Overview" route-values="@(new { Id = Model.Id })" class="BtnLink" role="tab" />
        }
    </tab-item>
    <tab-item no-render="@(Model.IsCreate || !User.IsInRole("datasetjoin.index"))">
        @if (Model.ActiveTab == DatasetViewTab.Joins)
        {
            <tab-active id="joins">@Datasets.Joins</tab-active>
        }
        else
        {
            <authorized-button controller="DatasetJoin" action="Index" title="@Datasets.Joins" route-values="@(new { Id = Model.Id })" class="BtnLink" role="tab" />
        }
    </tab-item>
    <tab-item no-render="@(Model.IsCreate || !User.IsInRole("datasetcolumn.index"))">
        @if (Model.ActiveTab == DatasetViewTab.Columns)
        {
            <tab-active id="columns">@Datasets.Columns</tab-active>
        }
        else
        {
            <authorized-button controller="DatasetColumn" action="Index" title="@Datasets.Columns" route-values="@(new { Id = Model.Id })" class="BtnLink" role="tab" />
        }
    </tab-item>
</tab-list>
