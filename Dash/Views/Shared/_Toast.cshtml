@if (!((string)(ViewBag.Message ?? TempData["Message"])).IsEmpty())
{
    <toast type="Success" message="@((string)(ViewBag.Message ?? TempData["Message"]))" />
}
@if (!((string)(ViewBag.Error ?? TempData["Error"])).IsEmpty())
{
    <toast type="Error" message="@((string)(ViewBag.Error ?? TempData["Error"]))" />
}
