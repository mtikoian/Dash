@using Dash.Resources
@model Table

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Alerts.ViewAll" controller="Alert" action="Index" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />

    <toolbar no-render="@(!User.IsInRole("alert.create"))">
        @Html.AuthorizedButton(Alerts.CreateAlert, "Create", "Alert", null, DashClasses.BtnPrimary)
    </toolbar>

    <dynamic-table options="@Model"></dynamic-table>
</body-content>
