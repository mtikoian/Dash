@using Dash.Resources
@model Dash.Models.Widget

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@(Model.IsCreate ? Widgets.CreateWidget : Widgets.EditWidget)" controller="Dashboard" action="@Model.FormAction" route-values="@(Model.IsCreate ? null : new { Id = Model.Id })" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />

    <horizontal-form controller="Dashboard" action="@Model.FormAction" method="@Model.FormMethod">
        <input asp-for="Id" type="hidden" />
        <input asp-for="X" type="hidden" />
        <input asp-for="Y" type="hidden" />
        <input asp-for="Width" type="hidden" />
        <input asp-for="Height" type="hidden" />

        <form-group-input for="Title" autofocus="true" />
        <form-group-select for="ReportId" options="@Model.GetReportSelectList()" toggle="disable" target="#ChartId" match="" />
        <form-group-select for="ChartId" options="@Model.GetChartSelectList()" toggle="disable" target="#ReportId" match="" />
        <form-group-select for="RefreshRate" options="@Model.GetWidgetRefreshRateSelectList()" />
        <form-buttons />
    </horizontal-form>
</body-content>
