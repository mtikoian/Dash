@model Dash.Models.Chart
@using Dash.Resources

<body-content>
    <breadcrumb>
        <partial name="_ChartBreadcrumbs" />
        <breadcrumb-item label="@Core.Rename" controller="Chart" action="Rename" route-values="@(new { Id = Model.Id })" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />
    <partial name="_ChartTabs" model="new ChartView(Model.Id, Model.IsOwner, ChartViewTab.Rename)" />

    <tab-panel id="renameChart">
        <horizontal-form controller="Chart" action="Rename" method="Put">
            <input asp-for="Id" type="hidden" />
            <form-group-input for="Name" />
            <form-buttons />
        </horizontal-form>
    </tab-panel>
</body-content>
