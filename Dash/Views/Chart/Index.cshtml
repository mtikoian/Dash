@using Dash.Resources

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Charts.ViewAll" controller="Chart" action="Index" is-active="true" />
    </breadcrumb>

    <partial name="_Toast" />

    <toolbar>
        <authorized-button controller="Chart" action="Create" title="@Charts.CreateChart" />
    </toolbar>

    <do-table result-url="@Url.Action("List")" id="tableCharts" template="#chartTemplate" />

    <do-row id="chartTemplate">
        <do-column label="@Charts.Name" field="name">
            <do-edit-link controller="Chart" text-property="name" />
        </do-column>
        <do-column label="@Core.Actions" field="actions" sortable="false">
            <do-edit-button controller="Chart" />
            <do-delete-button controller="Chart" confirm="@Charts.ConfirmDelete" />
            <do-copy-button controller="Chart" prompt="@Charts.NewName" />
        </do-column>
    </do-row>
</body-content>
