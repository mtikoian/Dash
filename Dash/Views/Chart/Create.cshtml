@model Dash.Models.CreateChart
@using Dash.Resources

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Charts.ViewAll" controller="Chart" action="Index"></breadcrumb-item>
        <breadcrumb-item label="@Charts.CreateChart" controller="Chart" action="@Model.FormAction" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />

    <tab-panel id="chart">
        <horizontal-form controller="Chart" action="@Model.FormAction" method="@Model.FormMethod">
            <form-group-input for="Name" autofocus="true" />
            <form-group-select for="ChartTypeId" options="@Dash.Models.Chart.ChartTypeSelectList" />
            <form-buttons />
        </horizontal-form>
    </tab-panel>
</body-content>
