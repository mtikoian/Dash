@model Dash.Models.Chart
@using Dash.Resources

<body-content>
    <breadcrumb>
        <partial name="_ChartBreadcrumbs" />
        <breadcrumb-item label="@Charts.ChangeType" controller="Chart" action="ChangeType" route-values="@(new { Id = Model.Id })" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />
    <partial name="_ChartTabs" model="new ChartView(Model.Id, Model.IsOwner, ChartViewTab.ChangeType)" />

    <tab-panel id="changeType">
        @using (Html.BeginCustomForm("ChangeType", "Chart"))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="columns">
                <div class="col-6">
                    @Html.LabelDropDownListFor(model => model.ChartTypeId, Dash.Models.Chart.ChartTypeSelectList)
                </div>
            </div>

            @Html.FormButtons()
        }
    </tab-panel>
</body-content>
