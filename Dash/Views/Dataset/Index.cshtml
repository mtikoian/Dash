@using Dash.I18n
@model Table

<div data-title="@Datasets.ViewAll" data-basic-dialog="true" data-close-event="dashboardReload" class="container">
    <div class="p-2">
        @using (Html.BeginToolbar())
        {
            @Html.AuthorizedButton(Datasets.CreateDataset, "Dataset", "Create", DashClasses.BtnPrimary, DashClasses.DashDialog,
                          hasAccess: this.User.IsInRole("dataset.create"))
        }
        <div class="col-12 dash-table" data-json="@Model.ToJson"></div>
    </div>
</div>
