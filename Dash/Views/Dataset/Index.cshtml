@using Dash.Resources
@model Table

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Datasets.ViewAll" controller="Dataset" action="Index" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />

    <toolbar no-render="@(!User.IsInRole("dataset.create"))">
