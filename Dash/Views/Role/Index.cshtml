@using Dash.Resources

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Roles.ViewAll" controller="Role" action="Index" is-active="true" />
    </breadcrumb>

    <partial name="_Toast" />

    <toolbar>
        <authorized-button controller="Role" action="Create" title="@Roles.CreateRole" />
    </toolbar>

    <do-table result-url="@Url.Action("List")" id="tableRoles" template="#roleTemplate" />

    <do-row id="roleTemplate">
        <do-column label="@Roles.Name" field="name">
            <do-edit-link controller="Role" text-property="name" />
        </do-column>
        <do-column label="@Core.Actions" field="actions" sortable="false">
            <do-edit-button controller="Role" />
            <do-delete-button controller="Role" confirm="@string.Format(Core.ConfirmDeleteBody, Roles.RoleLower)" />
            <do-copy-button controller="Role" prompt="@Roles.CopyBody" />
        </do-column>
    </do-row>
</body-content>
