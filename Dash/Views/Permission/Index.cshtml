@using Dash.I18n
@model Table

<div data-title="@Permissions.ViewAll" data-basic-dialog="true">
    @using (Html.BeginToolbar()) {
        @Html.AuthorizedButton(Permissions.CreatePermission, "Permission", "Create", DashClasses.BtnPrimary, DashClasses.DashDialog,
            hasAccess: this.User.IsInRole("permission.create"))
        @Html.AuthorizedButton(Permissions.CreateController, "Permission", "CreateController", DashClasses.BtnInfo, DashClasses.DashDialog,
            hasAccess: this.User.IsInRole("permission.createcontroller"))
    }
    <div class="col-12 dash-table" data-json="@Model.ToJson"></div>
</div>