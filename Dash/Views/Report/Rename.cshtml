@model Dash.Models.Report
@using Dash.Resources

<body-content>
    <breadcrumb>
        <partial name="_ReportBreadcrumbs" />
        <breadcrumb-item label="@Core.Rename" controller="Report" action="Rename" route-values="@(new { Model.Id })" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />
    <partial name="_ReportTabs" model="new ReportView(Model.Id, Model.IsOwner, ReportViewTab.Rename)" />

    <tab-panel id="renameReport">
        <horizontal-form controller="Report" action="Rename" method="Put">
            <input asp-for="Id" type="hidden" />
            <form-group-input for="Name" autofocus="true" />
            <form-buttons />
        </horizontal-form>
    </tab-panel>
</body-content>
