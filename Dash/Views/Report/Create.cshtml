@model Dash.Models.CreateReport
@using Dash.Resources

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Reports.ViewAll" controller="Report" action="Index"></breadcrumb-item>
        <breadcrumb-item label="@Reports.CreateReport" controller="Report" action="@Model.FormAction" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />

    <tab-panel id="report">
        <horizontal-form controller="Report" action="@Model.FormAction" method="@Model.FormMethod">
            <form-group-select for="DatasetId" autofocus="true" options="@(Model.GetDatasetsForUser().ToSelectList(d => d.Name, d => d.Id.ToString()))" />
            <form-group-input for="Name" />
            <form-buttons />
        </horizontal-form>
    </tab-panel>
</body-content>
