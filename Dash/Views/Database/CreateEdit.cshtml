@using Dash.Resources
@model Dash.Models.Database

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Databases.ViewAll" controller="Database" action="Index"></breadcrumb-item>
        <breadcrumb-item label="@(Model.IsCreate ? Databases.CreateDatabase : Databases.EditDatabase)" controller="Database" action="@Model.FormAction" route-values="@(Model.IsCreate ? null : new { Id = Model.Id })" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />

    <horizontal-form for="Model">
        <input asp-for="Id" type="hidden" />

        <form-group-input for="Name" autofocus="true" />
        <form-group-select for="TypeId" options="@Database.DatabaseTypeSelectList" />
        <form-group-input for="Host" />
        <form-group-input for="Port" />
        <form-group-input for="DatabaseName" />
        <form-group-checkbox for="AllowPaging" />
        <form-group-input for="User" />
        <form-group-input for="Password" />
        <form-group-input for="ConfirmPassword" />
        <form-group-checkbox for="IsEmptyPassword" />
        <form-group-textarea for="ConnectionString" />

        <form-buttons />
    </horizontal-form>
</body-content>
