@using Dash.Resources
@model Table

<body-content>
    <breadcrumb>
        <breadcrumb-item label="@Databases.ViewAll" controller="Database" action="Index" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Toast" />

    <toolbar no-render="@(!User.IsInRole("database.create"))">
        @Html.AuthorizedButton(Databases.CreateDatabase, "Create", "Database", null, DashClasses.BtnPrimary)
    </toolbar>

    <dynamic-table options="@Model"></dynamic-table>
</body-content>
